    DEPARTMENT ||--o{ EMPLOYEES : "has"
    CUSTOMERS ||--o{ ORDERS : "places"
    EMPLOYEES ||--o{ DOCUMENTS : "manages"
    PROJECTS ||--o{ FINANCIAL_TRANS : "records"
    PRODUCTS ||--o{ ORDERS : "ordered in"
    EMPLOYEES ||--o{ PROJECTS : "manages"
    EMPLOYEES ||--o{ SUPPLIES : "purchases"
    
    DEPARTMENT {
        int dept_id PK "increment"
        text dept_name "not null"
        text location
    }
    
    EMPLOYEES {
        int emp_id PK "increment"
        text first_name "not null"
        text last_name "not null"
        text email "unique"
        date hire_date
        int dept_id FK
    }
    
    CUSTOMERS {
        int customer_id PK "increment"
        text company_name "not null"
        text contact_name
        text customer_email
        decimal customer_amounts
        text contact_phone
    }
    
    PRODUCTS {
        int product_id PK "increment"
        text product_name "not null"
        real unit_price
    }
    
    ORDERS {
        int order_id PK "increment"
        datetime order_date
        int customer_id FK
        real total_amount
        int product_id FK "เพิ่มใหม่"
    }
    
    SUPPLIES {
        int supply_id PK "increment"
        text supplier_name
        text item_name
        real cost
        date supply_date
        int emp_id FK "ต้องเพิ่มฟิลด์นี้"
    }
    
    FINANCIAL_TRANS {
        int trans_id PK "increment"
        datetime trans_date
        text description
        real amount
        text type
        int project_id FK
    }
    
    DOCUMENTS {
        int doc_id PK "increment"
        text doc_name "not null"
        text file_path
        date upload_date
        int emp_id FK
    }
    
    PROJECTS {
        int project_id PK "increment"
        text project_name "not null"
        date start_date
        date end_date
        real budget
        text status
        int emp_id FK "เพิ่มใหม่"
    }
